{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://infinitego.net/schemas/player_actions/",
    "definitions": {
        "response": {
            "type": "object",
            "properties": {
                "viewport": {
                    "$ref": "https://infinitego.net/schemas/viewport.json"
                },
                "stones": {
                    "type": "array",
                    "items": {
                        "$ref": "https://infinitego.net/schemas/stone.json"
                    }
                },
                "player_color": {
                    "type": "string",
                    "enum": ["black", "white"]
                },
                "players_in_battlegroud": {
                    "type": "array",
                    "items": {
                        "$ref": "https://infinitego.net/schemas/player_observations/user.json"
                    },
                    "description": "Players in battleground, in turn order."
                },
                "turn_time_limit": {
                    "type": "number",
                    "minimum": 0
                },
                "turn_status": {
                    "type": "object",
                    "properties": {
                        "player": {
                            "type": "string"
                        },
                        "time_left": {
                            "type": "number",
                            "minimum": 0
                        }
                    },
                    "required": ["player", "time_left"]
                }
            },
            "required": [
                "viewport",
                "stones_in_viewport",
                "player_color",
                "players_in_battleground",
                "turn_time_limit",
                "turn_status"
            ]
        }
    }
}
