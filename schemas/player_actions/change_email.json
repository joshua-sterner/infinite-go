{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://infinitego.net/schemas/player_actions/change_email.json",
    "definitions": {
        "request": {
            "type": "object",
            "properties": {
                "password": {
                    "type": "string"
                },
                "new_email": {
                    "type": "string"
                }
            },
            "required": ["password", "new_email"]
        },
        "response": {
            "type": "object",
            "properties": {
                "failure_reason": {
                    "type": "string"
                }
            }
        }
    }
}
