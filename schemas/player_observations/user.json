{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://infinitego.net/schemas/player_observations/user.json",
    "type": "object",
    "properties": {
        "username": {
            "type": "string"
        },
        "date_joined": {
            "$ref": "https://infinitego.net/schemas/datetime.json"
        },
        "online": {
            "type": "boolean"
        },
        "white_stats": {
            "description": "Stone stats for white stones.",
            "$ref": "#/definitions/stone_stats"
        },
        "black_stats": {
            "description": "Stone stats for black stones.",
            "$ref": "#/definitions/stone_stats"
        }
    },
    "definitions": {
        "stone_stats": {
            "type": "object",
            "properties": {
                "stones_placed": {
                    "type": "integer",
                    "minimum": 0
                },
                "weighted_territory": {
                    "type": "number",
                    "minimum": 0
                },
                "weighted_captures": {
                    "type": "number",
                    "minimum": 0
                }
            },
            "required": [
                "stones_placed",
                "weighted_territory",
                "weighted_captures"
            ]
        }
    },
    "required": ["username", "date_joined", "online", "white_stats", "black_stats"]
}
